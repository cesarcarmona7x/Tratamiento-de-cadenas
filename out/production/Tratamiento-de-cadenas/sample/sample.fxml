<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>


<HBox prefHeight="600.0" prefWidth="800.0" spacing="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <children>
      <TextArea fx:id="textReceta" prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
      <VBox maxWidth="200.0" prefHeight="200.0" prefWidth="0.0" spacing="10.0" HBox.hgrow="ALWAYS">
         <children>
            <Label fx:id="lbLineas" text="Número de líneas:" />
            <Button mnemonicParsing="false" onAction="#procesar" text="Procesar" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</HBox>
